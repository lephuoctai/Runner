<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    tools:context=".MainActivity">

    <!-- Khu vực hiển thị thông số quan trọng nhất - KHOẢNG CÁCH -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvDistanceLabel"
                style="@style/DistanceLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDistance"
                style="@style/DistanceValueStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDistanceLabel" />

            <TextView
                android:id="@+id/tvDistanceUnit"
                style="@style/DistanceUnitStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/km"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvDistance"
                app:layout_constraintStart_toEndOf="@+id/tvDistance" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Thẻ hiển thị BƯỚC CHÂN -->

    <!-- Thẻ hiển thị TỐC ĐỘ -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSteps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toStartOf="@+id/cardSpeed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/cardDistance"
        app:layout_constraintTop_toBottomOf="@+id/cardDistance">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvStepsLabel"
                style="@style/StepsLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/steps"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSteps"
                style="@style/StepsValueStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvStepsLabel" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSpeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="@+id/cardDistance"
        app:layout_constraintStart_toEndOf="@+id/cardSteps"
        app:layout_constraintTop_toTopOf="@+id/cardSteps">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvSpeedLabel"
                style="@style/SpeedLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSpeed"
                style="@style/SpeedValueStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSpeedLabel" />

            <TextView
                android:id="@+id/tvSpeedUnit"
                style="@style/SpeedUnitStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/m_s"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvSpeed"
                app:layout_constraintStart_toEndOf="@+id/tvSpeed" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

<!--    Thẻ hiển thị menu tag button -->

    <!--    Thẻ hiển thị nội dung theo tag button-->
    <RadioGroup
        android:id="@+id/tagGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="4dp"

        app:layout_constraintEnd_toEndOf="@+id/cardSpeed"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="@+id/cardSteps"
        app:layout_constraintTop_toBottomOf="@id/cardSteps">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/tagLogRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/distance_color"
            android:checked="true"
            android:text="Recorded Log"
            android:textColor="@color/distance_color"
            android:textSize="16sp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/tagMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:buttonTint="@color/distance_color"
            android:text="Map"
            android:textColor="@color/distance_color"
            android:textSize="16sp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/tagRanking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:buttonTint="@color/distance_color"
            android:text="Ranking"
            android:textColor="@color/distance_color"
            android:textSize="16sp" />

    </RadioGroup>

    <!-- Nút bắt đầu/dừng -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardShowContentTag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"

        app:layout_constraintBottom_toTopOf="@+id/btnStartStop"
        app:layout_constraintEnd_toEndOf="@+id/cardDistance"
        app:layout_constraintStart_toStartOf="@+id/cardDistance"
        app:layout_constraintTop_toBottomOf="@id/tagGroup">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartStop"
        style="@style/ActionButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="@string/start"
        android:backgroundTint="@color/start_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Runner" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Background -->
        <item name="android:windowBackground">@color/light_background</item>
        <!-- Text color -->
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Các kiểu chữ cho thông số quan trọng nhất - Khoảng cách -->
    <style name="DistanceValueStyle">
        <item name="android:textSize">72sp</item>
        <item name="android:textColor">@color/distance_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DistanceLabelStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DistanceUnitStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/distance_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Các kiểu chữ cho thông số thứ yếu - Bước chân -->
    <style name="StepsValueStyle">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/steps_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StepsLabelStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Các kiểu chữ cho thông số thứ yếu - Tốc độ -->
    <style name="SpeedValueStyle">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/speed_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpeedLabelStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SpeedUnitStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/speed_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Action button style -->
    <style name="ActionButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>
